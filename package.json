{
  "name": "redbusagent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Autonomous terminal agent with Client-Server architecture (Daemon + TUI)",
  "bin": {
    "redbus": "./bin/redbus"
  },
  "workspaces": [
    "packages/shared",
    "packages/daemon",
    "packages/tui",
    "packages/cli"
  ],
  "scripts": {
    "dev:daemon": "npm run dev --workspace=packages/daemon",
    "dev:tui": "npm run dev --workspace=packages/tui",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "dependencies": {
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  }
}